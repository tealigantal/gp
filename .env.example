# Example environment file for docker-compose (.env)
# Copy to .env and edit values; NEVER commit real secrets

# Timezone
TZ=Asia/Shanghai

# Optional: pip mirror for faster install in China (used at build time)
# Examples:
# PIP_INDEX_URL=https://pypi.tuna.tsinghua.edu.cn/simple
# PIP_INDEX_URL=https://mirrors.aliyun.com/pypi/simple
PIP_INDEX_URL=https://pypi.org/simple

# LLM (optional; /recommend can run without it)
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_API_KEY=
CHAT_MODEL=deepseek-chat

# Data provider (akshare | local | official)
DATA_PROVIDER=akshare

# Route priorities (optional overrides; defaults are AK_SPOT_PRIORITY=em,sina and AK_DAILY_PRIORITY=sina,em,tx)
# AK_SPOT_PRIORITY=em,sina
# AK_DAILY_PRIORITY=sina,em,tx

# HTTP request timeout (seconds)
GP_REQUEST_TIMEOUT_SEC=60

# Strict real data only (no synthetic fallbacks)
STRICT_REAL_DATA=1

# Dynamic universe + mainline constraints
GP_MIN_AVG_AMOUNT=5e8
GP_NEW_STOCK_DAYS=60
GP_PRICE_MIN=2
GP_PRICE_MAX=500
GP_DYNAMIC_POOL_SIZE=200

GP_RESTRICT_MAINLINE=1
GP_MAINLINE_TOP_N=2
GP_MAINLINE_MODE=auto
GP_MAX_PER_INDUSTRY=2
